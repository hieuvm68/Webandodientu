@model IEnumerable<BHDT.Models.SanPham>
<h2>SearchName</h2>
@{
    ViewBag.Title = "SearchName";
}

@using (Html.BeginForm("SearchName", "SanPham", FormMethod.Get))
{
    @Html.TextBox("searchString")<input type="submit" value="Search" />
}
@if (Model.Count() == 0)
{
    <tr>
        <td colspan="3" style="color:red">
            Không tìm thấy kết quả...!
        </td>
    </tr>
}
else
{
    <table class="table">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.TenSP)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DonGia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayCapNhap)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mota)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HinhAnh)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.DaXoa)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.SoLuong)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tinhtrang)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.TenSP)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DonGia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayCapNhap)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mota)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.HinhAnh)*@
                    @*<img src="@Html.DisplayFor(modelItem=>item.HinhAnh)" width="80" height="80" />*@
                    <img src="@item.HinhAnh" width="80" height="80" />
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.DaXoa)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.SoLuong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tinhtrang)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.MaSP }) |
                    @Html.ActionLink("Details", "Details", new { id = item.MaSP }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.MaSP })
                </td>
            </tr>
        }

    </table>
}


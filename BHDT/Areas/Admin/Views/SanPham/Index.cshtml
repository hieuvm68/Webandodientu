@model IEnumerable<BHDT.Models.SanPham>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
@using (Html.BeginForm("SearchName", "SanPham", FormMethod.Get))
{
    @Html.TextBox("searchString")<input type="submit" value="Search" />
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayNameFor(model => model.TenSP)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DonGia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NgayCapNhap)
        </th>
       
        <th>
            @Html.DisplayNameFor(model => model.HinhAnh)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.DaXoa)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.SoLuong)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tinhtrang)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
               @item.TenSP
            </td>
            <td>
               @item.DonGia
            </td>
            <td>
                @item.NgayCapNhap
            </td>
            
            <td>
                @*@Html.DisplayFor(modelItem => item.HinhAnh)*@
                @*<img src="@Html.DisplayFor(modelItem=>item.HinhAnh)" width="80" height="80" />*@
                <img src="@Url.Content("~"+item.HinhAnh)" width="80" height="80" />
            </td>

            <td>
               @item.DaXoa
            </td>

            <td>
               @item.SoLuong
            </td>
            <td>
             @item.Tinhtrang
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MaSP }) |
                @Html.ActionLink("Details", "Details", new { id = item.MaSP }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MaSP })
            </td>
        </tr>
    }

</table>

@model IEnumerable<BHDT.Models.DonHang>
<h2>SearchName</h2>
@{
    ViewBag.Title = "SearchName";
}

@using (Html.BeginForm("SearchName", "DonHang", FormMethod.Get))
{
    @Html.TextBox("searchString")<input type="submit" value="Search" />
}
@*<h2>SearchName</h2>*@
@if (Model.Count() == 0)
{
    <tr>
        <td colspan="3" style="color:red">
            Không tìm thấy kết quả...!
        </td>
    </tr>
}
else
{
    <table class="table table-bordered table-hover">
        <tr>
            <th>
                Khách Hàng - Tên KH
            </th>
            <th>
                Ngày Đặt
            </th>
            <th>
                Tình Trạng Giao Hàng
            </th>
            <th>
                Ngày Giao
            </th>
            <th>
                Đã Thanh Toán
            </th>
            <th>
                Ưu đãi
            </th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TaiKhoan.TenTK)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayDat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TinhtrangDH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayGiao)
                </td>


                <td>
                    @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.MaDDH }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.MaDDH }) |
                    @Html.ActionLink("Xoá", "Delete", new { id = item.MaDDH })
                </td>
            </tr>
        }
    </table>

}


@using BHDT.Models
@model List<itemGioHang>
<a href="@Url.Action("XemGioHang","GioHang")" class="header__cart hide-on-mobile-tablet">
    <div class="header__cart-wrap">
        <i class="header__cart-icon fas fa-shopping-cart"></i>
        <span id="spcart-quantity" class="header__cart-wrap-notice"> @ViewBag.TongSoLuong</span>


        <div class="header__cart-list">
            @if (Model.Count == 0)
            {
                <div class="header__cart-list-item  header__cart-list--no-cart ">
                    <img src="~/Images/empty-cart.png" class="header__cart-no-card-img">
                    <span class="header__cart-list-no-card-msg">
                        Chưa có sản phẩm
                    </span>
                    </div>
                    }
                    else
                    {


                    <div class="header__cart-heading">Sản phẩm đã thêm</div>

                    foreach (var item in Model)
                    {
                    <ul class="header__cart-list-item">

                        <li title="@item.TenSP" class="header__cart-item">
                            <div class="header__cart-img-wrapper">
                                <img src="@Url.Content("~"+item.HinhAnh)"
                                     class="header__cart-img">
                            </div>
                            <div class="header__cart-item-info">
                                <div class="header__cart-item-head">
                                    <div class="header__cart-item-name">
                                        @item.TenSP
                                    </div>
                                    <div class="header__cart-item-price-wrap">
                                        <span class="header__cart-item-price">@item.DonGia</span>
                                        <span class="header__cart-item-multiply">x</span>
                                        <span class="header__cart-item-qnt">@item.SoLuong</span>
                                    </div>
                                </div>
                                <div class="header__cart-item-body">
                                    <span class="header__cart-item-description">

                                    </span>
                                </div>
                            </div>
                        </li>
                    </ul>

                    }

                    <button class="header__cart-view-cart btn btn--primary">Xem giỏ hàng</button>
                    }

            </div>
    </div>

</a>
@using BHDT.Models;
@model IEnumerable<SanPham>

@{
    /**/

    ViewBag.Title = "lstSP";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--menu danh muc-->
<div class="col l-2 m-0 c-0">
    <div class="category-pc">
        @{ Html.RenderAction("MenuPartial", "Home");}

    </div>
</div>
<div class="col l-10 m-12 c-12">
    <div class="home-filter hide-on-mobile-tablet">
        <span class="home-filter__label">Sắp xếp theo</span>
        <button class="home-filter__btn btn">
            Phổ biến
        </button>
        <button class="home-filter__btn btn btn--primary">Mới nhất</button>
        <button class="home-filter__btn btn">Bán chạy</button>

        <div class="select-input">
            <span class="select-input__label">Giá</span>
            <i class="select-input__icon fas fa-angle-down"></i>
            <ul class="select-input__list">
                <li class="select-input__item">
                    Giá: Thấp đến cao
                </li>
                <li class="select-input__item">
                    Giá: Cao đến thấp
                </li>
            </ul>
        </div>
    </div>
    <div class="home-product">
        <div class="row sm-gutter">

            <!--xu li list product-->

            @foreach (var item in Model.OrderBy(n => n.DonGia))
            {
                //double sale = (double)item.UuDai;
                double tien = (double)item.DonGia;
                //double tiensale = (double)(item.DonGia) * (double)item.UuDai;
                <div class="col l-2-4 m-4 c-6">
                    <a href="/demo/Product/ProductDetail/@item.MaSP" class="home-product-item">
                        <img src="@item.HinhAnh" class="home-product-item__img">
                        <div class="home-product-item__name"> @item.TenSP </div>
                        <div class="home-product-item__price">
                            @*<span class="home-product-item__price-old">@tien.ToString("###,#đ") </span>*@
                            <span class="home-product-item__price-current">@tien.ToString("###,#đ")</span>
                        </div>
                        <div class="home-product-item__action">
                            <div class="home-product-item__rating">
                                <i class="home-product-item__star--gold fas fa-star"></i>
                                <i class="home-product-item__star--gold fas fa-star"></i>
                                <i class="home-product-item__star--gold fas fa-star"></i>
                                <i class="home-product-item__star--gold fas fa-star"></i>
                                <i class="fas fa-star"></i>
                            </div>

                        </div>
                        <div class="product-favourite">
                            <i class="fas fa-check"></i>
                            <span>Yêu Thích</span>
                        </div>
                        @*<div class="product-sale-off">
                                <span class="product-sale-off__percent">@sale.ToString("#%") </span>
                                <span class="product-sale-off__label"> SALE </span>
                            </div>*@
                    </a>
                </div>
            }



        </div>
    </div>
</div>











